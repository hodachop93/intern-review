<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="266dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_corner_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="28dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="40dp"
        android:text="Are you sure you want to delete Micheal Jackson?"
        android:textColor="@color/Black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/button.border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOK"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_transparent_button"
            android:text="OK"
            android:textColor="@color/contact.dialog.button.text" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/button.border" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_transparent_button"
            android:text="Cancel"
            android:textColor="@color/contact.dialog.button.text" />
    </LinearLayout>
</LinearLayout>
